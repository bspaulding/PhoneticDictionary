<?xml version="1.0" encoding="UTF-8" ?>
  <widget xmlns = "http://www.w3.org/ns/widgets"
    xmlns:gap   = "http://phonegap.com/ns/1.0"
    id          = "com.motingo.rhymes"
    versionCode = "10"
    version     = "1.0.0">

  <!-- versionCode is optional and Android only -->

  <name>Rhymes</name>

  <description>
    A rhyming dictionary.
  </description>

  <author href="http://motingo.com" email="support@motingo.com">
      Bradley J. Spaulding
  </author>

  <preference name="phonegap-version" value="1.7.0"     />
  <preference name="orientation"      value="both"      />
  <preference name="target-device"    value="universal" />
  <preference name="fullscreen"       value="false"     />

  <!-- iOS Specific Preferences -->
  <preference name="webviewbounce"      value="false"        />
  <preference name="prerendered-icon"   value="false"        />
  <preference name="ios-statusbarstyle" value="black-opaque" />

  <!-- Icons -->
  <icon gap:platform="ios" width="57"  height="57"  src="images/apple-touch-icon-57x57.png"   />
  <icon gap:platform="ios" width="72"  height="72"  src="images/apple-touch-icon-72x72.png"   />
  <icon gap:platform="ios" width="114" height="114" src="images/apple-touch-icon-114x114.png" />
  <icon gap:platform="ios" width="144" height="144" src="images/apple-touch-icon-144x144.png" />

  <!-- Startup Screens -->
  <gap:splash width="320"  height="480"  src="images/apple-touch-startup-image-320x460.png"   />
  <gap:splash width="640"  height="960"  src="images/apple-touch-startup-image-640x920.png"   />
  <gap:splash width="768"  height="1024" src="images/apple-touch-startup-image-768x1004.png"  />
  <gap:splash width="1024" height="768"  src="images/apple-touch-startup-image-1024x748.png"  />
  <gap:splash width="1536" height="2048" src="images/apple-touch-startup-image-1536x2008.png" />
  <gap:splash width="2048" height="1536" src="images/apple-touch-startup-image-2048x1496.png" />
</widget>